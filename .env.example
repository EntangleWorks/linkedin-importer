# =============================================================================
# LinkedIn Profile Importer - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your values
# =============================================================================

# -----------------------------------------------------------------------------
# DATABASE CONFIGURATION
# -----------------------------------------------------------------------------
# Option 1: Full connection URL (takes precedence)
DATABASE_URL=postgresql://user:password@localhost:5432/portfolio

# Option 2: Individual parameters (used if DATABASE_URL is not set)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=portfolio
DB_USER=portfolio_user
DB_PASSWORD=your_database_password

# -----------------------------------------------------------------------------
# LINKEDIN AUTHENTICATION (Web Scraping)
# -----------------------------------------------------------------------------
# PREFERRED: Cookie-based authentication (bypasses 2FA)
# To obtain your li_at cookie:
# 1. Log in to LinkedIn in your browser
# 2. Open Developer Tools (F12)
# 3. Go to Application > Cookies > linkedin.com
# 4. Find the "li_at" cookie and copy its value
LINKEDIN_COOKIE=your_li_at_cookie_value_here

# FALLBACK: Email/Password authentication (may trigger 2FA)
# Only used if LINKEDIN_COOKIE is not set
LINKEDIN_EMAIL=your_email@example.com
LINKEDIN_PASSWORD=your_linkedin_password

# Email to associate with the imported profile (required)
# This is YOUR email for the portfolio, not scraped from LinkedIn
PROFILE_EMAIL=your_portfolio_email@example.com

# -----------------------------------------------------------------------------
# BROWSER CONFIGURATION
# -----------------------------------------------------------------------------
# Run Chrome in headless mode (no visible window)
# Set to "true" for server/CI environments, "false" for debugging
HEADLESS=true

# Path to ChromeDriver executable (optional)
# If not set, webdriver-manager will auto-download the correct version
# CHROMEDRIVER_PATH=/usr/local/bin/chromedriver

# -----------------------------------------------------------------------------
# SCRAPER BEHAVIOR
# -----------------------------------------------------------------------------
# Maximum time to wait for page loads (seconds)
PAGE_LOAD_TIMEOUT=30

# Delay between actions like clicking, typing (seconds)
# Higher values reduce detection risk but slow down scraping
ACTION_DELAY=1.0

# Delay between scroll actions (seconds)
SCROLL_DELAY=0.5

# Maximum number of retries for failed operations
MAX_RETRIES=3

# Take screenshot on error (for debugging)
SCREENSHOT_ON_ERROR=false

# Custom user agent (optional, uses Chrome default if not set)
# USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36

# -----------------------------------------------------------------------------
# LEGACY API CONFIGURATION (Deprecated - no longer used)
# -----------------------------------------------------------------------------
# These settings were for the LinkedIn API approach which is no longer functional
# LINKEDIN_API_KEY=your_api_key
# LINKEDIN_API_SECRET=your_api_secret
# LINKEDIN_ACCESS_TOKEN=your_access_token
